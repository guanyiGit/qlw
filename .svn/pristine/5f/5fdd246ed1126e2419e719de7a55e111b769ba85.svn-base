// JavaScript Document

$(function(){
	var k=0;
	$('.lab').click(function(){
		if(k==0){
			$(this).find('span').removeClass('dian').addClass('dian2');
			$(this).siblings().find('span').removeClass('dian2').addClass('dian');
			k=1;
		}else if(k=1){
			$(this).find('span').removeClass('dian2').addClass('dian');
			$(this).siblings().find('span').removeClass('dian').addClass('dian2');
			k=0;
		}
	});
	
	
});	
