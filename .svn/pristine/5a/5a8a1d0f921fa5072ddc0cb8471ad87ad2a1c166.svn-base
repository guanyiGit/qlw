.search-container {
    margin: 42px 16px 42px 0;
    position: relative;
    width: 313px;
    float: right;
}

.search-icon {
    display: inline-block;
    height: 35px;
    width: 35px;
    background: url(../assets/img/seach-icon.png) no-repeat;
    background-size: 100% 100%;
    position: absolute;
    left: -35px;
    top: 8px;
}
.search-icon:hover{
    cursor: pointer;
}

.search-container::after {
    content: "";
    display: block;
    height: 0;
    clear: both;
    visibility: hidden;
}

.form-input {
    border-radius: 50px;
    width: 350px;
    margin-right: 10px;
    border: solid 1px #A3C3FA;
    height: 46px;
    text-indent: 3.5em;
    float: right;
    transition: text-indent 1s;
    -moz-transition: text-indent 1s; /* Firefox 4 */
    -webkit-transition: text-indent 1s; /* Safari å’Œ Chrome */
    -o-transition: text-indent 1s;
}

input:focus {
    outline: none !important;
    border: 1px solid red;
    box-shadow: 0 0 10px #719ECE;
}